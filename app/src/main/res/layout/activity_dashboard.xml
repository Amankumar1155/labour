<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/roundedwhitedash"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/rounded_corner_image"
            android:src="@drawable/aman" />

        <Button
            android:layout_marginTop="50dp"
            android:layout_marginLeft="170dp"
            android:layout_marginRight="20dp"
            android:text="Subscribe Now- To Get More Orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="110dp"
            android:text="Aman Chaurasiya"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="140dp"
            android:text="7398869340"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <View
            android:layout_marginTop="170dp"
            android:gravity="center"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="40dp"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="2dp"/>

        <TextView
            android:maxLength="50"
            android:textStyle="bold"
            android:text="LABOUR/ CAARPENTRE/elecdsffsdffdfsdfdsfdsdsfssdfdsdfsddfssdf etc"
            android:textColor="@color/black"
            android:textAlignment="center"
           android:layout_marginTop="240dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.google.android.material.imageview.ShapeableImageView
            android:clickable="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="210dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/premium"
            app:shapeAppearanceOverlay="@style/RoundedImageView"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginLeft="10dp"
                android:textColor="@color/yellow"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Works Image Uploads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp" />
            <Button
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/yellow"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="eKYC (ID Verification)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="520dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginLeft="10dp"
                android:textColor="@color/yellow"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Refer Friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="570dp" />
            <Button
                android:layout_marginLeft="10dp"
                android:textColor="@color/yellow"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Rate the Customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="570dp" />
            <Button
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/yellow"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Rate AT Solutions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="570dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="640dp"
                android:textColorHint="@color/black"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="Query and Suggestions"/>

                <Button
                    android:layout_marginLeft="290dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"
                    android:text="Submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Switch
                    android:background="@drawable/custom_rounded_switch_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:thumb="@drawable/custom_switch_thumb"
                    android:track="@drawable/custom_switch_track"
                    android:switchTextAppearance="@style/CustomSwitchTextAppearance"
                    android:text="I Am Available / Not"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />

            </com.google.android.material.textfield.TextInputLayout>






        </LinearLayout>


    </FrameLayout>




</ScrollView>

