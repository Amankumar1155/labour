<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/bg1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Kycprocess">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:hint="Please Uplode the documents and make sure they are clear and easy to read."
        android:textColor="@color/black"
        android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uplode Your Profile Picture"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            android:backgroundTint="@color/white"
            android:layout_weight="1"
            >

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Uplode Your Adhaar Card Front Image"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white"
        android:layout_weight="1"
        >

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Uplode Your Adhaar Card Back Image"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:hint="Note:- Your documents will only be used to handle your request and will be store securely."
        android:textColor="@color/black"
        android:textSize="20sp" />


    <androidx.cardview.widget.CardView
        android:id="@+id/docsubmit"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_weight="0.7"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="S U B M I T"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="" />


    </androidx.cardview.widget.CardView>


</LinearLayout>